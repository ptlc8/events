{
    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "declaration": true,
        "target": "es2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "maxNodeModuleJsDepth": 0,
    },
    "include": [
        "./*.js"
    ],
    "verbose": true
}